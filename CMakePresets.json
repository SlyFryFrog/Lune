{
  "version": 8,
  "configurePresets": [
    {
      "name": "abstract",
      "hidden": true,
      "generator": "Ninja"
    },
    {
      "inherits": "abstract",
      "name": "GenericDebug",
      "binaryDir": "${sourceDir}/build/Debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "inherits": "abstract",
      "name": "GenericRelease",
      "binaryDir": "${sourceDir}/build/Release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}